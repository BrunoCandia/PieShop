@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

<h1>Roles</h1>
<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <!-- Add actions like editing/deleting roles here -->
                    <a>Detail</a>
                    <a>Edit</a>
                    <a>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Role")" class="btn btn-primary">Add Role</a>
<a href="@Url.Action("Assign", "Role")" class="btn btn-secondary">Assign Role</a>