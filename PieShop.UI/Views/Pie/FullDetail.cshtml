@model PieDetailViewModel

<h2>Details for @Model.Pie.Name</h2>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Pie.PieId"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Pie.PieId
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Pie.Name"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Pie.Name
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Pie.ShortDescription"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Pie.ShortDescription
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Pie.LongDescription"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Pie.LongDescription
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Pie.Price"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Pie.Price
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Pie.AllergyInformation"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Pie.AllergyInformation
        </dd>

        <dt class="col-sm-2">
            <label asp-for="Pie.IsPieOfTheWeek"></label>
        </dt>
        <dd class="col-sm-10">
            <input type="checkbox" checked="@Model.Pie.IsPieOfTheWeek" disabled />
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Pie.IsInStock"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Pie.IsInStock
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Pie.Category.Name"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Pie.Category.Name
        </dd>
        
        @if (Model.Pie.Ingredients.Count > 0)
        {
            <dt class="col-sm-2">
                Ingredients in this pie
            </dt>
            <dd class="col-sm-10">
                <table class="table">
                    <tr>
                        <th>Ingredient name</th>
                        <th>Amount</th>
                    </tr>
                    @foreach (var ingredient in Model.Pie.Ingredients)
                    {
                        <tr>
                            <td>
                                @ingredient.Name
                            </td>
                            <td>
                                @ingredient.Amount
                            </td>
                        </tr>
                    }
                </table>
            </dd>
        }

        <dt class="col-sm-2">
            <label asp-for="Pie.ImageThumbnailUrl"></label>
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Pie.ImageThumbnailUrl" width="300" height="150" />
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Pie.ImageUrl"></label>
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Pie.ImageUrl" width="300" height="150" />

        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Pie" asp-action="Index">Back to overview</a>
</div>