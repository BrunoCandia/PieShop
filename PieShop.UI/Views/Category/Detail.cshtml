@model CategoryDetailViewModel

<h2>Details for category @Model.Category.Name</h2>
<hr />

<div>
    <dl class="row">        
        <dt class="col-sm-2">
            <label asp-for="Category.Name"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Category.Name
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Category.Description"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Category.Description
        </dd>
        @* <dt class="col-sm-2">
            <label asp-for="Category.DateAdded"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Category.DateAdded.Value.ToShortDateString()
        </dd> *@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Pies)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Pie name</th>
                    <th>Price</th>
                </tr>
                @foreach (var pie in Model.Category.Pies)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(category => pie.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(category => pie.Price)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>