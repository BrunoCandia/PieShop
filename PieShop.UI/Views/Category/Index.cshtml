@model CategoryListViewModel

<h2>Categories</h2>
<hr />

@if (TempData["CategoryDeleted"] != null)
{
    <p class="text-success">@TempData["CategoryDeleted"]</p>
}

@if (!Model.Categories.Any())
{
    <p>No results</p>
}
else
{
    <table class="table table-condensed table-bordered">
        <tr>            
            <th>Name</th>
            @* <th>Date Added</th> *@
            <th>Actions</th>
        </tr>
        @foreach (var category in Model.Categories)
        {
            <tr>                
                <td>@category.Name</td>
                @* <td>@category.DateAdded.Value.ToShortDateString()</td> *@
                <td>
                    <a asp-controller="Category" asp-action="Detail" asp-route-categoryId="@category.CategoryId">Detail</a>
                    <a asp-controller="Category" asp-action="Edit" asp-route-categoryId="@category.CategoryId">Edit</a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-categoryId="@category.CategoryId">Delete</a>
                </td>
            </tr>
        }
    </table>
}

<p>
    <a class="btn btn-primary" asp-action="Add">Add new category</a>
</p>